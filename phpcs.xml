<?xml version="1.0"?>
<ruleset name="Laravel-Shopify Ruleset" namespace="OhMyBrew\ShopifyApp">
  <description>PSR2 CS for Laravel-Shopify</description>

  <rule ref="PSR2" />

  <exclude-pattern>/vendor/*</exclude-pattern>
  <exclude-pattern>/build/*</exclude-pattern>
  <exclude-pattern>/bin/*</exclude-pattern>
  <exclude-pattern>/src/ShopifyApp/resources/*</exclude-pattern>
  <exclude-pattern>/tests/*</exclude-pattern>

  <autoload>/vendor/autoload.php</autoload>
</ruleset>